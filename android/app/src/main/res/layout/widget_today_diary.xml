<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_today_diary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <ImageView
        android:id="@+id/widget_accent"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginBottom="12dp"
        android:background="#7C3AED"
        android:contentDescription="accent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today's Diary"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#B0B0B0"
        android:textSize="12sp"
        android:layout_marginTop="4dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="divider" />

    <TextView
        android:id="@+id/widget_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's on your mind today?"
        android:textColor="#E0E0E0"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end" />

    <Button
        android:id="@+id/widget_write_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Write Now"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:background="@drawable/widget_button_background"
        android:padding="12dp" />

</LinearLayout>
